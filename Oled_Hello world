#include <Wire.h>
#include <U8g2lib.h>

// Use software constructor and manually initialize Wire
U8G2_SH1106_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE); 

void setup() {
  Wire.begin(19, 18); // SDA=19, SCL=18
  u8g2.begin();

  // Optional: for initial testing
  u8g2.clearBuffer();
  u8g2.setFont(u8g2_font_ncenB14_tr);      
  u8g2.drawStr(0, 40, "Hello World!");
  u8g2.sendBuffer(); 
}

void loop() {
  // Nothing in loop for now
}
